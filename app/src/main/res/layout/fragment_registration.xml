<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.registration.RegistrationFragment">

    <EditText
        android:id="@+id/editTextRegFirstName"
        android:layout_width="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_height="wrap_content"
        android:hint="Имя"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"/>

    <EditText
        android:layout_width="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRegLogin"
        android:hint="Логин"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextRegFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRegPassword"
        android:hint="Пароль"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextRegLogin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRegPasswordRepeat"
        android:hint="Повторите пароль"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextRegPassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_registration"
        app:layout_constraintStart_toStartOf="@id/editTextRegPasswordRepeat"
        app:layout_constraintTop_toBottomOf="@id/editTextRegPasswordRepeat"
        app:layout_constraintEnd_toEndOf="@id/editTextRegPasswordRepeat"
        android:layout_marginTop="10dp"
        android:text="Зарегестрироваться"/>

</androidx.constraintlayout.widget.ConstraintLayout>
