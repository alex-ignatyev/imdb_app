<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment2">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.sideki.imdb_app.ui.movies_list.MoviesFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies">

        <action
            android:id="@+id/to_movieInfoFragment"
            app:destination="@id/movieInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieInfoFragment"
        android:name="com.sideki.imdb_app.ui.movie_info.MovieInfoScreen"
        android:label="MovieInfoFragment">

        <argument
            android:name="movieId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sideki.imdb_app.ui.profile.ProfileScreen"
        android:label="ProfileFragment">
        <action
            android:id="@+id/to_loginFragment2"
            app:destination="@id/loginFragment2" />
        <action
            android:id="@+id/to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment2"
        android:name="com.sideki.imdb_app.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment2_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment2_to_moviesFragment"
            app:destination="@id/moviesFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.sideki.imdb_app.ui.registration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" />
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.sideki.imdb_app.ui.change_password.ChangePasswordScreen"
        android:label="fragment_change_password" />
</navigation>
