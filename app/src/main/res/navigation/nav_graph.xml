<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sideki.imdb_app.ui.login.LoginFragment"
        android:label="fragmentLogin"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/to_moviesFragment"
            app:destination="@id/moviesFragment" />

    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.sideki.imdb_app.ui.registration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" />

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.sideki.imdb_app.ui.movies.MoviesFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies">

        <action
            android:id="@+id/to_movieInfoFragment"
            app:destination="@id/movieInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieInfoFragment"
        android:name="com.sideki.imdb_app.ui.movie_info.MovieInfoFragment"
        android:label="MovieInfoFragment">

        <argument
            android:name="movieId"
            app:argType="string" />

        <action
            android:id="@+id/to_actorInfoFragment"
            app:destination="@id/actorInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/actorInfoFragment"
        android:name="com.sideki.imdb_app.ui.actor_info.ActorInfoFragment"
        android:label="ActorInfoFragment">

        <argument
            android:name="actorId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sideki.imdb_app.ui.profile.ProfileFragment"
        android:label="ProfileFragment" />

</navigation>
